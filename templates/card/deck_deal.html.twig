{% extends 'base.html.twig' %}

{% block title %}Dela ut kort{% endblock %}

{% block body %}
    <main class="main">
    <article class="article">
        <h1>Dela ut kort</h1>

        <table>
        <thead>
            <tr>
            <th>Spelare</th>
            <th>Kort</th>
            </tr>
        </thead>
        <tbody>
            {% for player, cards in hands %}
            <tr>
                <td>{{ player }}</td>
                <td>
                <ul>
                    {% for card in cards %}
                    <li>{{ card }}</li>
                    {% endfor %}
                </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
        </table>

        <p><strong>Kvar i spelet:</strong> {{ remaining }} kort.</p>

        <p>
            <a href="{{ path('card_deck') }}">Visa kortlek</a> |
            <a href="{{ path('card_deck_shuffle') }}">Blanda om</a> |
            <a href="{{ path('card_deck_draw') }}">Dra ett kort</a>
        </p>
    </article>
</main>
{% endblock %}
