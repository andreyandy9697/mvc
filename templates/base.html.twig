<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/kursicon.png') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

            <style>
                body {
                    background-image:
                        linear-gradient(
                            to bottom,
                            rgba(0, 0, 0, 0.5),
                            rgba(0, 0, 0, 0.6)
                            ),
                        url({{ asset('img/01_Anemon.jpg') }});
                    background-size: cover;
                    background-position: center;
                    background-repeat: no-repeat;
                    background-attachment: fixed;
                    color: white;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

        <link rel="stylesheet" href="{{ asset('css/footer.css') }}">

    </head>

    <body>
        <header class="header">
            <img class="logo" src="img/favicon.png" alt="Kurs icon">
            <span class="title">Kursen MVC</span>
        </header>

        <nav class="navbar"
            style="
                background-image:
                linear-gradient(to top, rgba(255,255,255,0.7), rgba(0,0,0,0.7)),
                url({{ asset('img/05_2355Col.jpg') }});
                background-size: cover;
                background-position: center;
            ">

            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ path('lucky') }}">Lucky</a></li>
                <li><a href="{{ path('card_index') }}">Ã–versikt Kortspel</a></li>
                <li><a href="{{ path('api') }}">API</a></li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
    </body>

    {% include 'Webpage/footer.html.twig' %}
</html>
